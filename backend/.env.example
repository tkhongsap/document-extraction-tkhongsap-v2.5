# Database
DATABASE_URL=postgresql://user:password@localhost:5432/document_ai

# Session
SESSION_SECRET=your-session-secret-key

# API Key Security Secrets (2-Tier Hashing)
# IMPORTANT: Use different strong random values for each tier
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(64))"
API_KEY_SECRET_TIER_1=your-tier1-secret-for-private-key-1-most-secure
API_KEY_SECRET_TIER_2=your-tier2-secret-for-verification

# Llama Cloud API
LLAMA_CLOUD_API_KEY=llx-your-api-key

# OpenAI API (for vector embeddings / RAG)
OPENAI_API_KEY=sk-your-openai-api-key

# Ollama Embedding (Local - primary)
EMBEDDING_PROVIDER=ollama
OLLAMA_API_URL=http://10.4.93.66:9020
OLLAMA_EMBEDDING_MODEL=bge-m3:latest


# Object Storage (Replit specific)
PRIVATE_OBJECT_DIR=/bucket-name/private
PUBLIC_OBJECT_SEARCH_PATHS=/bucket-name/public

# Environment
NODE_ENV=development
PORT=5000
