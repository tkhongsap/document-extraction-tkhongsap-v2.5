# =============================================================================
# DocEx Environment Variables
# =============================================================================

# =============================================================================
# DATABASE (Docker Compose)
# =============================================================================
POSTGRES_USER=docex
POSTGRES_PASSWORD=docex_password
POSTGRES_DB=docex
POSTGRES_PORT=5432

# Database URL for the application
DATABASE_URL=postgresql+asyncpg://docex:docex_password@localhost:5432/docex

# =============================================================================
# PGADMIN (Optional - for database management)
# =============================================================================
PGADMIN_EMAIL=admin@docex.local
PGADMIN_PASSWORD=admin
PGADMIN_PORT=5050

# =============================================================================
# LLAMA CLOUD API
# =============================================================================
LLAMA_CLOUD_API_KEY=your_llama_cloud_api_key_here

# =============================================================================
# OPENAI API (for embeddings)
# =============================================================================
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Embedding Provider: openai or ollama
EMBEDDING_PROVIDER=openai

# Ollama Embedding (backup - local)
OLLAMA_API_URL=http://localhost:11434
OLLAMA_EMBEDDING_MODEL=bge-m3:latest

# =============================================================================
# OBJECT STORAGE (local development)
# =============================================================================
PRIVATE_OBJECT_DIR=./storage/private
PUBLIC_OBJECT_SEARCH_PATHS=./storage/public

# =============================================================================
# APPLICATION
# =============================================================================
NODE_ENV=development
PORT=8000
SESSION_SECRET=dev-session-secret-key-change-in-production

# =============================================================================
# REPLIT AUTH (optional)
# =============================================================================
REPLIT_DOMAINS=your-replit-domain.repl.co
ISSUER_URL=https://replit.com

# =============================================================================
# EMAIL SMTP (for email verification)
# =============================================================================
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
SMTP_USE_TLS=true
FROM_EMAIL=your_email@gmail.com
FROM_NAME=Document AI Extractor

# =============================================================================
# STRIPE (Billing - optional)
# =============================================================================
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx
STRIPE_PRICE_ID_PRO=price_xxx

# =============================================================================
# GOOGLE CLOUD STORAGE (optional)
# =============================================================================
GCS_BUCKET_NAME=your-bucket-name
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

